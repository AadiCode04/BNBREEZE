<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border-radius: 25px;
    padding: 0.7rem 1.8rem;
    display: flex;     
    align-items: center;
    border: none;
    font-weight: 600;
  }

  .btn-search:hover {
    background-color: #e63946;
    color: white;
  }

  .btn-search i {
    margin-right: 8px;
  }

  .search-input {
    border-radius: 30px;
    padding: 0.7rem 2rem;
    font-size: 1rem;
    width: 350px;
    border: 2px solid #e0e0e0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .search-input:focus {
    border-color: #fe424d;
    box-shadow: 0 0 0 0.2rem rgba(254, 66, 77, 0.25);
  }

  .navbar-nav .addListing {
    color: white; 
    background-color: #fe424d;
    border-radius: 25px;
    border: none;
    padding: 0.5rem 1.2rem;
    font-weight: 600;
    transition: all 0.3s ease;
}

.navbar-nav .addListing:hover {
    background-color: #e63946;
    transform: translateY(-1px);
}

  .navbar-brand {
    font-size: 1.5rem;
    color: #fe424d !important;
    font-weight: bold;
  }

  .navbar-brand i {
    margin-right: 8px;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i>
      Explore
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <!-- Empty space for center alignment -->
      </div>

      <div class="mx-auto">
        <form class="d-flex" role="search">
          <input class="form-control me-2 search-input" type="search" placeholder="Search Destinations">
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
            Search
          </button>
        </form>
      </div>

      <div class="navbar-nav ms-auto">
        <a class="nav-link addListing" href="/listings/new">Bnbreeze your home</a>
        <% if(!currUser) { %> 
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
        <% } %>
        <% if(currUser) { %> 
          <a class="nav-link" href="/logout" style="color: rgb(14, 47, 112);">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>